<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daylayout"
    android:layout_width="92dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/gradient_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="date"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datesuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="suffix"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="temp"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/temperaturemin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="temp_min"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/temperature"
        app:layout_constraintTop_toTopOf="@+id/temperature" />

    <TextView
        android:id="@+id/temperaturehi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/temperature"
        app:layout_constraintTop_toBottomOf="@+id/temperature" />

    <TextView
        android:id="@+id/temperaturelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/temperaturemin"
        app:layout_constraintTop_toBottomOf="@+id/temperaturemin" />

    <TextView
        android:id="@+id/rain"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="0.0mm"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/winddirection" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Rain"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/rain"
        app:layout_constraintTop_toBottomOf="@+id/rain" />

    <TextView
        android:id="@+id/winddirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NW"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/windspeed"
        app:layout_constraintTop_toBottomOf="@+id/windspeed" />

    <TextView
        android:id="@+id/windspeed"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="12kph"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/rain"
        app:layout_constraintTop_toBottomOf="@+id/temperaturehi" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@+id/winddirection"
        app:layout_constraintTop_toBottomOf="@+id/winddirection" />

    <GridView
        android:id="@+id/dayactivitylist"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</android.support.constraint.ConstraintLayout>
