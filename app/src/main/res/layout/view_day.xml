<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datesuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="suffix"
        android:textSize="9sp"
        app:layout_constraintLeft_toRightOf="@+id/date"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="temp"
        app:layout_constraintLeft_toLeftOf="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/temperaturemax"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="temp_max"
        app:layout_constraintLeft_toRightOf="@+id/temperature"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/temperaturemin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="temp_min"
        app:layout_constraintLeft_toLeftOf="@+id/temperaturemax"
        app:layout_constraintTop_toBottomOf="@+id/temperaturemax" />

    <TextView
        android:id="@+id/rain"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:text="rain"
        app:layout_constraintLeft_toRightOf="@+id/temperaturemax"
        app:layout_constraintTop_toTopOf="@+id/temperaturemax" />

    <TextView
        android:id="@+id/winddirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="winddir"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/windspeed"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/windspeed" />

    <TextView
        android:id="@+id/windspeed"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:text="wind"
        app:layout_constraintLeft_toRightOf="@+id/rain"
        app:layout_constraintTop_toTopOf="@+id/rain" />

    <GridView
        android:id="@+id/dayactivitylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/winddirection" />

</android.support.constraint.ConstraintLayout>
